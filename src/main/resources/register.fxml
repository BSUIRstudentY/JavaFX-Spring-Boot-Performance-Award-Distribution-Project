<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bonussystem.controller.RegisterController" stylesheets="@styles.css">
    <Label text="Регистрация" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Имя пользователя" styleClass="custom-textfield" />
    <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="custom-textfield" />
    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
    <Button text="Зарегистрироваться" onAction="#register" styleClass="custom-button" />
</VBox>